<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>상세 페이지</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="../public/css/boards.css" />
  </head>
  <body>
    <div class="header">
      <header class="p-3 text-bg-dark">
        <div class="container">
          <div
            class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start"
          >
            <a
              href="/"
              class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none"
            >
              <svg
                class="bi me-2"
                width="40"
                height="32"
                role="img"
                aria-label="Bootstrap"
              >
                <use xlink:href="#bootstrap"></use>
              </svg>
            </a>

            <ul
              class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0"
            >
              <li>
                <a
                  href="#"
                  class="nav-link px-2 text-info"
                  onclick="location.href='/boards'"
                  >Life Bit</a
                >
              </li>
            </ul>

            <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
              <input
                type="search"
                class="form-control form-control-dark text-bg-dark"
                placeholder="검색"
                aria-label="Search"
              />
            </form>

            <div class="text-end">
              <button type="button" class="btn btn-outline-light me-2">
                Login
              </button>
            </div>
          </div>
        </div>
      </header>
    </div>

    <div class="main">
      <div class="p-5 mb-4 bg-body-tertiary rounded-3">
        <div class="container-fluid py-5">
          <img
            src="https://life-bit.s3.ap-northeast-2.amazonaws.com/<%= board.thumbnail %>"
            class="boardImage"
            alt="..."
          />
          <h1 class="display-5 fw-bold"><%= board.title %></h1>
          <p class="content"><%= board.content %></p>
          <form id="likeBtn">
          <button id="likeButton" type="submit" class="btn btn-dark">좋아요!</button>
        </form>
          <p class="content">❤️<%= board.likedCount %></p>
          <p class="content">카테고리: <%= board.category %></p>
        </div>
      </div>
    </div>
<% if(currentUserId && board.userId === currentUserId) { %>
  <form id="bottuomBtn">
    <button
      onclick="redirectToPage(event)"
      type="button"
      class="btn btn-dark"
    >
      게시물 수정
    </button>

    <button type="submit" class="btn btn-dark">게시물 삭제</button>
  </form>
    <% } %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.2.0/socket.io.js"></script>
    <script>
      function redirectToPage(event) {
        var currentUrl = window.location.href;
        var boardId = null;
        var urlParts = currentUrl.split('/');
        var index = urlParts.indexOf('view');
        if (index !== -1 && index < urlParts.length - 1) {
          boardId = urlParts[index + 1];
        }
        if (boardId) {
          window.location.href = `/boards/view/${boardId}/update`;
        } else {
          console.log('boardId를 가져올 수 없습니다.');
        }
      }

      $('#bottuomBtn').submit((event) => {
        event.preventDefault();
        var currentUrl = window.location.href;
        var boardId = null;
        var urlParts = currentUrl.split('/');
        var index = urlParts.indexOf('view');
        if (index !== -1 && index < urlParts.length - 1) {
          boardId = urlParts[index + 1];
        }

        $.ajax({
          url: `http://localhost:3000/boards/${boardId}`,
          method: 'DELETE',
          contentType: 'application/json',
          data: JSON.stringify(),
          success: (data) => {
            alert('게시물 삭제가 완료되었습니다.');
            window.location.href = 'http://localhost:3000/boards';
          },
          error: (jqXHR, textStatus, errorThrown) => {
            const errorMessage = jqXHR.responseJSON
              ? jqXHR.responseJSON.message
              : '게시물 삭제에 실패하였습니다.';
            alert(errorMessage);
            console.log(errorMessage);
          },
        });
      });

      $('#likeBtn').submit((event) => {
        event.preventDefault();
        var currentUrl = window.location.href;
        var boardId = null;
        var urlParts = currentUrl.split('/');
        var index = urlParts.indexOf('view');
        if (index !== -1 && index < urlParts.length - 1) {
          boardId = urlParts[index + 1];
        }

      // const socket = io();
      document.getElementById('likeBtn').addEventListener('click', async function() {
      const message = '좋아요가 눌렸습니다!';
      // socket.emit('like', { message });
      const response = await fetch(`/boards/${boardId}/like`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
        boardId: boardId
      })
    });
  });
  // socket.on('like', (data) => {
  //     alert(data.message);
  //   });

      $.ajax({
        url: `/boards/${boardId}/like`,
        method: 'POST',
        contentType: 'application/json',
        data: JSON.stringify(),
        success: (data) => {
          alert('좋아요!');
          window.location.href = `/boards/view/${boardId}`;
        },
        error: (jqXHR, textStatus, errorThrown) => {
          const errorMessage = jqXHR.responseJSON
          ? jqXHR.responseJSON.message
          : '게시물 좋아요에 실패하였습니다.';
          alert(errorMessage);
          console.log(errorMessage);
        },
      });
    });
    </script>
  </body>
</html>
