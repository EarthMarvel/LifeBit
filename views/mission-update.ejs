<!doctype html>
<html>
  <head>
    <style>
      /* 전체 스타일 */
      body {
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #1a1a1a;
        color: #e0e0e0;
      }

      /* 중앙 정렬 */
      .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
      }

      /* 카드 스타일 */
      .card {
        background-color: #2a2a2a;
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
      }

      /* 폼 필드 스타일 */
      .form-field {
        margin-bottom: 16px;
      }

      .form-label {
        display: block;
        font-weight: bold;
        color: #e54d47;
        margin-bottom: 4px;
      }

      .form-control {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 8px;
        background-color: #3a3a3a;
        color: #e0e0e0;
      }

      /* 이미지 미리보기 */
      .img-upload {
        margin-bottom: 16px;
        text-align: center;
      }

      #thumbnailPreview {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 12px;
        margin-bottom: 8px;
      }

      /* 수정 버튼 스타일 */
      #updateBtn {
        width: 100%;
        padding: 12px;
        background-color: #e54d47;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      #updateBtn:hover {
        background-color: #ff6f61;
      }

      /* 반응형 스타일 */
      @media (max-width: 768px) {
        .card {
          padding: 16px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="card">
        <form id="missionForm" enctype="multipart/form-data">
          <!-- 이미지 업로드 섹션 -->
          <div class="img-upload">
            <img
              id="thumbnailPreview"
              src="https://life-bit.s3.ap-northeast-2.amazonaws.com/<%= mission.thumbnail %>"
              class="thumbnail"
              alt="이미지 미리보기"
            />
            <input type="file" id="fileInput" accept="image/*" />
          </div>

          <!-- 다른 입력 필드들 -->
          <div class="form-field">
            <label for="title" class="form-label">미션 제목</label>
            <input
              type="text"
              id="title"
              class="form-control"
              value="<%= mission.title %>"
            />
          </div>

          <div class="form-field">
            <label for="category" class="form-label">카테고리</label>
            <input
              type="text"
              id="category"
              class="form-control"
              value="<%= mission.category %>"
            />
          </div>

          <div class="form-field">
            <label for="startDate" class="form-label">시작 날짜</label>
            <input
              type="date"
              id="startDate"
              class="form-control"
              value="<%= mission.startDate %>"
            />
          </div>

          <div class="form-field">
            <label for="endDate" class="form-label">종료 날짜</label>
            <input
              type="date"
              id="endDate"
              class="form-control"
              value="<%= mission.endDate %>"
            />
          </div>

          <div class="form-field">
            <label for="numberPeople" class="form-label">참가자 수</label>
            <input
              type="number"
              id="numberPeople"
              class="form-control"
              value="<%= mission.numberPeople %>"
            />
          </div>

          <div class="form-field">
            <label for="description" class="form-label">설명</label>
            <textarea id="description" class="form-control" rows="3">
<%= mission.description %></textarea
            >
          </div>

          <button type="submit" id="updateBtn" class="btn btn-primary">
            수정하기
          </button>
        </form>
      </div>
    </div>

    <script>
      // 이미지 미리보기 로직
      document
        .getElementById('fileInput')
        .addEventListener('change', function (event) {
          const file = event.target.files[0];
          if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
              document.getElementById('thumbnailPreview').src = e.target.result;
            };
            reader.readAsDataURL(file);
          }
        });

      // 폼 제출 로직
      document
        .getElementById('missionForm')
        .addEventListener('submit', function (event) {
          event.preventDefault();

          // formData 초기화
          const formData = new FormData();
          const fileInput = document.getElementById('fileInput');
          const titleInput = document.getElementById('title');
          const categoryInput = document.getElementById('category');
          const startDateInput = document.getElementById('startDate');
          const endDateInput = document.getElementById('endDate');
          const numberPeopleInput = document.getElementById('numberPeople');
          const descriptionInput = document.getElementById('description');

          // 이미지 처리
          if (fileInput.files[0]) {
            formData.append('thumbnail', fileInput.files[0]);
          } else {
            // 사용자가 이미지를 선택하지 않았을 경우 기존 썸네일 사용
            const thumbnailSrc =
              document.getElementById('thumbnailPreview').src;
            formData.append('thumbnail', thumbnailSrc);
          }

          // 입력 데이터 추가
          formData.append('title', titleInput.value);
          formData.append('category', categoryInput.value);
          formData.append('startDate', startDateInput.value);
          formData.append('endDate', endDateInput.value);
          formData.append('numberPeople', numberPeopleInput.value);
          formData.append('description', descriptionInput.value);

          // 서버 요청
          const missionId = '<%= mission.missionId %>';
          fetch(`/mission/${missionId}`, {
            method: 'PUT',
            headers: {
              Authorization: `Bearer ${document.cookie.replace(/(?:(?:^|.*;\s*)authorization\s*\=\s*([^;]*).*$)|^.*$/, '$1')}`,
            },
            body: formData,
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.message === '미션 수정 완료') {
                alert('미션이 성공적으로 수정되었습니다.');
                window.location.href = `/mission/${missionId}`;
              }
            })
            .catch((error) => {
              console.error('미션 수정 중 오류가 발생했습니다:', error);
              alert(
                '미션 수정 중 오류가 발생했습니다. 잠시 후 다시 시도해주세요.',
              );
            });
        });
    </script>
  </body>
</html>
